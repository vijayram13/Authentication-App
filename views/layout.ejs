    <%-style%>
</head>
<body>
    
    <%-include('_header')-%>
  
    <%- body%>
    <%-script%>

    <script>
        // for success messages
        <% if (flash.success && flash.success.length>0) { %>
            new Noty({
                theme: "relax",
                text: '<%= flash.success %>',
                type: "success",
                layout: "topRight",
                timeout: 1500


            }).show();
            <% } %>
        
        // for error messages
        <% if (flash.error && flash.error.length>0) { %>

            new Noty({
                theme: "relax",
                text: '<%= flash.error %>',
                type: "error",
                layout: "topRight",
                timeout: 1500

            }).show();

        <% } %>
    </script>
</body>

</html>